<!DOCTYPE html>
<html>
<head>
  <title>TvTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- bootstrap -->
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
  <link href="https://fonts.googleapis.com/css?family=Bungee+Hairline" rel="stylesheet">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
</head>
<body>
	<nav id="nav">
    <% if user_signed_in? %>
      <div class="nav-link"><%= link_to "My List", lists_path %></div>
      <div class="nav-link"><a href="<%= edit_user_registration_path %>">Hi <%= current_user.name %>!</a></div>
      <div class="nav-link"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></div>
    <% else %>
      <div class="nav-link"><%= link_to('Login', new_user_session_path)  %></div>
      <div class="nav-link"><%= link_to('Sign Up', new_user_registration_path)  %></div>
    <% end %>
	</nav>

  <div class="container-fluid">
    <div id="logo">
      <%= link_to image_tag("/assets/tvtracker.png", class: "img-responsive"), series_index_path %>
    </div>

    <% if notice %>
  	 <p id="notice"><%= notice %></p>
    <% end %>
         
    <%= yield %>
  </div>
</body>
</html>